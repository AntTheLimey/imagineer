# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=imagineer
POSTGRES_USER=imagineer

# MCP Server Configuration
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: OpenAI for alternative LLM
# OPENAI_API_KEY=your_openai_key_here

# Optional: Ollama for local LLM
# OLLAMA_HOST=http://host.docker.internal:11434

# Google OAuth Configuration
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:3001/api/auth/google/callback

# Frontend URL for OAuth redirect (defaults to http://localhost:5173)
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_EXPIRY_HOURS=24
JWT_SECRET=your_secure_jwt_secret_here_minimum_32_characters
